<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".HastaDuzenle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHastaAdii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/hasta_ad" />

        <EditText
            android:id="@+id/edtTextHastaAdiDuzenleSil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hasta_ad"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDuzenle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="hastaDuzenle"
            android:layout_weight="1"
            android:text="@string/hasta_d_zenle" />

        <Button
            android:id="@+id/btnSil"
            android:layout_width="wrap_content"
            android:onClick="hastaSil"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hasta_sil" />
    </LinearLayout>
</LinearLayout>